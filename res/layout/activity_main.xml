<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.example.garvitgupta.attendancesystem.MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/intro"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="19dp"
        android:text="Tired of trying to maintain your lecture attendance ?? But still not able to fulfil the minimum criteria... Now just sit back and relax because this app allows you to manage your attendance in most efficient and easiest manner."
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#FFFFFF"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By : Garvit Gupta"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFF00"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="#0000FF"
        android:onClick="newActivity"
        android:id="@+id/get_started"
        />
</LinearLayout>
