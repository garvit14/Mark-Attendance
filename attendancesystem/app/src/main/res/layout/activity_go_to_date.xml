<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/myColor"
    tools:context="com.example.garvitgupta.attendancesystem.GoToDate">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/myColor"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/go_day"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/go_month"
        android:background="@color/myColor"
        android:text="January"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"
        android:id="@+id/go_date"
        android:background="@color/myColor"
        android:text="22"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:id="@+id/go_year"
            android:background="@color/myColor"
            android:text="2017"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plus"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:background="@color/myColor"
            android:id="@+id/go_extra"
            android:onClick="extraClass"
            />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/go_list"
        android:layout_marginTop="10dp">
    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_holiday"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#99FFFF"
        android:layout_marginTop="10dp"
        />


</LinearLayout>
